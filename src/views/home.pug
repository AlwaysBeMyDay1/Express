extends ./config/base
block scripts
    <script src="http://code.jquery.com/jquery-latest.js"></script>
    script(type="text/javascript",src="/static/js/home.js",  defer)
    
block content   
    if loggedIn
        div.content_top 0000.00.00
        div.content_timer_time
            | #{String(parseInt(timePerDays.timePerDay[indexTotal].total/3600)).padStart(2,"0")}
            | : #{String(parseInt((timePerDays.timePerDay[indexTotal].total%3600)/60)).padStart(2,"0")}
            | : #{String(parseInt((timePerDays.timePerDay[indexTotal].total%3600)%60)).padStart(2,"0")}
        br
        div.minvh
            div.content_exrs
                div.content_exrs_title
                div.content_exrs_title_char_divbox
                    span.content_exrs_title_chars1 오늘의 운동
                    span.content_exrs_title_chars2 운동 시간
                div.content_exrs_list
                    ul.exrs_ui
                        if user
                            if(user.exercises !== null)
                            each exercise, index in user.exercises
                                li.content_exr(id="content_exr_"+index)
                                    div.exr_timer
                                        button.exr_timer_parent(id="exr_timer_"+index, type="button") ▶
                                            span#exr_timer_name #{exercise.exrname}
                                    span.exr_timer_time_parent(id="exr_timer_time_"+index)
                                    | #{String(parseInt(user.exercises[index].exrtime/3600)).padStart(2,"0")}
                                    | : #{String(parseInt((user.exercises[index].exrtime%3600)/60)).padStart(2,"0")}
                                    | : #{String(parseInt((user.exercises[index].exrtime%3600)%60)).padStart(2,"0")}
                                    button.exr_timer_specific_parent(id = "exr_timer_specific"+index, type="button")
                                        i.fas.fa-ellipsis-v
                        else
                            li 
                                div 👇👇👇 운동을 추가해주세요! 👇👇👇
            form.content_exrs_add_list(method="POST")
                div#add_exrs 운동 추가
                input(id="plus_input", type="submit" value="╋")
                input(id="plus_box", name="exrname",type="text",placeholder="운동 입력", required)
    else
        div.plz_signup 👆👆👆 회원가입을 완료해주세요! 👆👆👆